    "/loans/": {
      "get": {
        "tags": ["Loans"],
        "summary": "Get all loans",
        "description": "Retrieve all book loans from the library (Admin only - Protected)",
        "responses": {
          "200": {
            "description": "List of loans retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          }
        }
      },
      "post": {
        "tags": ["Loans"],
        "summary": "Create a new loan",
        "description": "Create a book loan transaction (Admin only - Protected)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "bookId": {
                  "type": "string",
                  "example": "674abc123def456789012345",
                  "description": "Book MongoDB ObjectId (required)"
                },
                "userId": {
                  "type": "string",
                  "example": "674xyz123def456789012345",
                  "description": "User MongoDB ObjectId (required)"
                },
                "loanDate": {
                  "type": "string",
                  "format": "date-time",
                  "example": "2024-12-09T00:00:00.000Z",
                  "description": "Loan date (defaults to current date if not provided)"
                },
                "dueDate": {
                  "type": "string",
                  "format": "date-time",
                  "example": "2025-01-09T00:00:00.000Z",
                  "description": "Due date for returning the book (required)"
                },
                "notes": {
                  "type": "string",
                  "example": "First loan for this member",
                  "description": "Additional notes about the loan"
                }
              },
              "required": ["bookId", "userId", "dueDate"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Loan created successfully"
          },
          "400": {
            "description": "Validation error or no copies available"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Book or User not found"
          }
        }
      }
    },
    "/loans/overdue": {
      "get": {
        "tags": ["Loans"],
        "summary": "Get overdue loans",
        "description": "Retrieve all loans that are past their due date (Admin only)",
        "responses": {
          "200": {
            "description": "List of overdue loans retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/loans/user/{userId}": {
      "get": {
        "tags": ["Loans"],
        "summary": "Get loans by user",
        "description": "Retrieve all loans for a specific user (Authentication required)",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "User MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "User loans retrieved successfully"
          },
          "400": {
            "description": "Invalid user ID format"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/loans/{id}": {
      "get": {
        "tags": ["Loans"],
        "summary": "Get loan by ID",
        "description": "Retrieve a single loan by its ID (Authentication required)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Loan MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "Loan found successfully"
          },
          "400": {
            "description": "Invalid loan ID format"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Loan not found"
          }
        }
      },
      "put": {
        "tags": ["Loans"],
        "summary": "Update a loan (return book)",
        "description": "Update loan information or mark book as returned (Admin only - Protected)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Loan ID"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "dueDate": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Update due date"
                },
                "returnDate": {
                  "type": "string",
                  "format": "date-time",
                  "example": "2024-12-09T00:00:00.000Z",
                  "description": "Set return date to mark book as returned"
                },
                "status": {
                  "type": "string",
                  "enum": ["active", "returned", "overdue"],
                  "description": "Loan status"
                },
                "notes": {
                  "type": "string",
                  "description": "Additional notes"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Loan updated successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Loan not found"
          }
        }
      },
      "delete": {
        "tags": ["Loans"],
        "summary": "Delete a loan",
        "description": "Remove a loan record from the system (Admin only)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Loan ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Loan deleted successfully"
          },
          "400": {
            "description": "Invalid loan ID format"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Loan not found"
          }
        }
      }
    }
  }
}
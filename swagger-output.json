          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/categories/": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get all categories",
        "description": "Retrieve all book categories (Public access)",
        "responses": {
          "200": {
            "description": "List of categories retrieved successfully"
          }
        }
      },
      "post": {
        "tags": ["Categories"],
        "summary": "Create a new category",
        "description": "Add a new book category (Admin only - Protected)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Science Fiction",
                  "description": "Category name (required)"
                },
                "description": {
                  "type": "string",
                  "example": "Books about science fiction and futuristic themes"
                },
                "bookCount": {
                  "type": "number",
                  "example": 0,
                  "description": "Number of books in this category"
                },
                "isActive": {
                  "type": "boolean",
                  "example": true,
                  "description": "Whether category is active"
                }
              },
              "required": ["name"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Category created successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {

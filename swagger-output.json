{
  "swagger": "2.0",
  "info": {
    "title": "Municipal Library of Trujillo API",
    "description": "Library Management System API - CSE 341 Final Project Week 06",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "tags": [
    {
      "name": "Books",
      "description": "Endpoints for managing library books"
    },
    {
      "name": "Users",
      "description": "Endpoints for managing library members and staff"
    },
    {
      "name": "Categories",
      "description": "Endpoints for managing book categories"
    },
    {
      "name": "Loans",
      "description": "Endpoints for managing book loans and returns"
    }
  ],
  "paths": {
    "/books/": {
      "get": {
        "tags": ["Books"],
        "summary": "Get all books",
        "description": "Retrieve all books from the library catalog (Public access)",
        "responses": {
          "200": {
            "description": "List of books retrieved successfully"
          }
        }
      },
      "post": {
        "tags": ["Books"],
        "summary": "Create a new book",
        "description": "Add a new book to the library catalog (Admin only - Protected)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "1984",
                  "description": "Book title (required)"
                },
                "author": {
                  "type": "string",
                  "example": "George Orwell",
                  "description": "Author name (required)"
                },
                "isbn": {
                  "type": "string",
                  "example": "9780451524935",
                  "description": "ISBN (10 or 13 digits, required)"
                },
                "genre": {
                  "type": "string",
                  "example": "Dystopian Fiction"
                },
                "categoryId": {
                  "type": "string",
                  "example": "674abc123def456789012345",
                  "description": "Category MongoDB ObjectId (optional)"
                },
                "publicationYear": {
                  "type": "number",
                  "example": 1949
                },
                "publisher": {
                  "type": "string",
                  "example": "Penguin Books"
                },
                "totalCopies": {
                  "type": "number",
                  "example": 5,
                  "description": "Total copies available (required)"
                },
                "availableCopies": {
                  "type": "number",
                  "example": 5
                },
                "description": {
                  "type": "string",
                  "example": "A dystopian social science fiction novel"
                },
                "coverImage": {
                  "type": "string",
                  "example": "https://example.com/cover.jpg"
                }
              },
              "required": ["title", "author", "isbn", "totalCopies"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Book created successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized - Login required"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          },
          "404": {
            "description": "Category not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/category/{categoryId}": {
      "get": {
        "tags": ["Books"],
        "summary": "Get books by category",
        "description": "Retrieve all books in a specific category (Public access)",
        "parameters": [
          {
            "name": "categoryId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Category MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "Books retrieved successfully"
          },
          "400": {
            "description": "Invalid category ID format"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "summary": "Get book by ID",
        "description": "Retrieve a single book by its ID (Public access)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "Book found successfully"
          },
          "400": {
            "description": "Invalid book ID format"
          },
          "404": {
            "description": "Book not found"
          }
        }
      },
      "put": {
        "tags": ["Books"],
        "summary": "Update a book",
        "description": "Update book information (Admin only - Protected)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                },
                "isbn": {
                  "type": "string"
                },
                "genre": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string",
                  "example": "674abc123def456789012345",
                  "description": "Category MongoDB ObjectId"
                },
                "publicationYear": {
                  "type": "number"
                },
                "publisher": {
                  "type": "string"
                },
                "totalCopies": {
                  "type": "number"
                },
                "availableCopies": {
                  "type": "number"
                },
                "description": {
                  "type": "string"
                },
                "coverImage": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book updated successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin required"
          },
          "404": {
            "description": "Book or Category not found"
          }
        }
      },
      "delete": {
        "tags": ["Books"],
        "summary": "Delete a book",
        "description": "Remove a book from the library (Admin only)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Book deleted successfully"
          },
          "400": {
            "description": "Invalid book ID format"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Book not found"
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "description": "Retrieve all library members (Admin only - Protected)",
        "responses": {
          "200": {
            "description": "List of users retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "Add a new member to the library (Admin only - Protected)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "John",
                  "description": "First name (required)"
                },
                "lastName": {
                  "type": "string",
                  "example": "Doe",
                  "description": "Last name (required)"
                },
                "email": {
                  "type": "string",
                  "example": "john.doe@example.com",
                  "description": "Email address (required, unique)"
                },
                "role": {
                  "type": "string",
                  "enum": ["member", "admin"],
                  "example": "member",
                  "description": "User role"
                },
                "status": {
                  "type": "string",
                  "enum": ["active", "inactive", "suspended"],
                  "example": "active",
                  "description": "Account status"
                },
                "phone": {
                  "type": "string",
                  "example": "+51 987654321",
                  "description": "Phone number"
                }
              },
              "required": ["firstName", "lastName", "email"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
